{{ 'section-footer.css' | asset_url | stylesheet_tag }}

<script src="{{ 'section-footer.js' | asset_url }}" defer></script>

<footer-accordion>
  <footer class="s-footer {% if localization.language.iso_code == 'ar' %}s-footer--rtl{% endif %}">
    <div class="s-footer__top">
      <div class="s-footer__top-content">
        <div class="s-footer__signup">
          <h4 class="s-footer__signup-title">
            {{- 'sections.footer.sign_up' | t -}}
          </h4>
          <p class="s-footer__signup-text">
            {{- 'sections.footer.join_news' | t -}}
          </p>

          <form class="s-footer__signup-form signup-form">
            <div class="signup-form__wrapper">
              <input class="signup-form__input" type="email" name="email" id="email" placeholder="Email" required>

              <button class="signup-form__button">
                {% render 'icon-chevron' %}
              </button>
            </div>
          </form>
        </div>

        <div class="s-footer__information">
          <div class="s-footer__menu footer-menu">
            {% for link in section.settings.footer_menu.links -%}
              <button class="footer-menu__button js-footer-menu__button">
                {{ link.title }}
                <span class="footer-menu__icon js-footer-menu__icon">
                  {% render 'icon-chevron' %}
                </span>
              </button>

              {%- if link.links != blank -%}
                <div class="footer-menu__accordion-content">
                  <ul class="footer-menu__list">
                    {%- for child_link in link.links -%}
                      <li class="footer-menu__item">
                        <a class="footer-menu__link" href="#">{{ child_link.title }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              {%- endif %}
            {%- endfor %}
          </div>

          <div class="s-footer__shipment">
            <h4 class="s-footer__shipment-title">
              {{- 'sections.footer.ship_to' | t -}}
            </h4>
            <select class="s-footer__shipment-select" name="shipment__select" id="shipment__select">
              <option class="s-footer__shipment-option" value="1">United Kingdom (£)</option>
              <option class="s-footer__shipment-option" value="2">United Kingdom (£)</option>
              <option class="s-footer__shipment-option" value="3">United Kingdom (£)</option>
            </select>
          </div>
        </div>
      </div>
    </div>

    <div class="s-footer__bottom">
      <div class="s-footer__bottom-content">
        <span class="s-footer__bottom-span">Copyright @ Wandler</span>

        <div class="s-footer__bottom-social">
          <a class="s-footer__bottom-social--link" href="#"> {% render 'icon-insta' %}</a>
          <a class="s-footer__bottom-social--link" href="#">{% render 'icon-tiktok' %}</a>
        </div>
      </div>
    </div>
  </footer>
</footer-accordion>

{% schema %}
{
  "name": "Footer",
  "class": "section-footer",
  "settings": [
    {
      "type": "header",
      "content": "Section settings"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menu"
    }
  ]
}
{% endschema %}
