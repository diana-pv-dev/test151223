{{ 'section-header.css' | asset_url | stylesheet_tag }}

{% comment %} зробити навігацію зет-індекс 98, лого 99 та бургер меню/хрест, та окрему навігацію яка буде заходити зверху зліва 100 {% endcomment %}

<div class="s-header">
  <div class="s-header__logo-container">
    <a class="s-header__logo-link" href="/">
      {% if section.settings.logo %}
        {% render 'image',
          image: section.settings.logo,
          max_width: 122,
          max_height: 15,
          preload: true,
          ratio_wrap: false
        %}
      {% endif %}
    </a>
  </div>

  <div class="s-header__wrapper">
    <nav class="s-header__nav">
      <ul class="s-header__nav-list">
        {% for link in section.settings.menu.links -%}
          <li class="s-header__nav-item">{{ link.title | link_to: link.url }}</li>
        {%- endfor %}
      </ul>
    </nav>

    <div class="s-header__icons">
      <button class="s-header__icons-btn">
        <div class="s-header__icon">
          {% render 'icon-search' %}
        </div>
      </button>

      <button class="s-header__icons-btn">
        <div class="s-header__icon">
          <a href="{{ routes.cart_url }}">
            {% render 'icon-cart' %}
          </a>
        </div>
      </button>

      <button class="s-header__icons-btn">
        <div class="s-header__icon s-header__icon--burger">
          {% render 'icon-burger-menu' %}
        </div>
      </button>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "section-header",
  "settings": [
    {
      "type": "header",
      "content": "Header settings"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Company logo",
      "info": "Recommended size: x108"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ]
}
{% endschema %}
